  <div id="add-form-container" class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-center">Solicitação de Equipamento</h1>
      </div>
      

      <div id="form-box" class="col-md-12">
        <h2>Preencha os dados da sua solicitação</h2>
        
        <!--  INSERÇÃO DE DADOS NO BANCO  -->
        <form action="/jobs/add" method = "POST">
          
          <div class="form-group">
            <label for="endereco">Endereço completo (Rua, número, bairro, cidade, estado):</label>
            <input type="text" class="form-control" id="endereco" name="endereco" placeholder="Digite o endereço completo da ocorrência" required>
          </div>

          <div class="form-group">
            <label for="latitude">Latitude:</label>
            <input type="text" class="form-control" id="latitude" name="latitude" placeholder="Digite a latitude da ocorrência" required></textarea>
          </div>

          <div class="form-group">
            <label for="longitude">Longitude:</label>
            <input type="text" class="form-control" id="longitude" name="longitude" placeholder="Digite a longitude da ocorrência" required></textarea>
          </div>
                    
          <input type="hidden" name="new_job" value="1">
          <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
      </div>
    </div>
  </div>